<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context="com.handshake.Handshake.GetStartedActivity">

    <com.handshake.views.TextViewCustomFont
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:text="Your account is ready for setup. Get started by creating your profile..."
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <com.handshake.views.TextViewCustomFont
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <com.handshake.views.ButtonCustomFont
        android:id="@+id/get_started"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="64dp"
        android:background="@drawable/button_white"
        android:text="Let's get started!"
        android:textColor="@color/orange"
        android:textSize="18sp" />

</RelativeLayout>
