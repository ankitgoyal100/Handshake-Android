<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    tools:context=".IntroActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/start" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="60dp"
        android:scaleType="centerInside"
        android:src="@drawable/logo" />

    <com.handshake.Handshake.TextViewCustomFont
        android:id="@+id/welcome"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:gravity="center_horizontal"
        android:text="Welcome to Handshake."
        android:textColor="@color/off_white"
        android:textSize="26sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="100dp"
        android:layout_height="1dip"
        android:layout_below="@id/welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:background="@color/off_white" />

    <com.handshake.Handshake.TextViewCustomFont
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal"
        android:text="Handshake makes sharing and receiving contact information the easiest thing you've ever done."
        android:textColor="@color/off_white"
        android:textSize="14sp" />

    <com.handshake.Handshake.ButtonCustomFont
        android:id="@+id/sign_up"
        style="@style/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@drawable/button_transparent"
        android:text="Sign Up"
        android:textColor="@color/off_white"
        android:textSize="18sp" />

    <com.handshake.Handshake.ButtonCustomFont
        android:id="@+id/login"
        style="@style/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/sign_up"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_white"
        android:text="Log In"
        android:textColor="@color/brown"
        android:textSize="18sp" />

</RelativeLayout>
